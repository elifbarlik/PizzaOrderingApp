@code {
    private List<Pizza> cart = new();
    private List<GroupedCartItem> groupedCart = new();
    private decimal totalPrice;
    private string? message;
    private bool isAuthenticated;
    private List<Pitzam.Models.SavedCard> savedCards = new();
    private string? selectedSavedCardId;
    private bool useSavedCard => !string.IsNullOrEmpty(selectedSavedCardId);
    private bool saveCard;

    protected override async Task OnInitializedAsync()
    {
        cart = OrderState.GetCart();
        BuildGroups();
        totalPrice = groupedCart.Sum(g => g.LineTotal);
        await Auth.LoadCurrentUserAsync();
        isAuthenticated = Auth.IsAuthenticated;
        if (isAuthenticated && Auth.CurrentUser?.SavedCards != null)
        {
            savedCards = Auth.CurrentUser.SavedCards;
            if (savedCards.Count > 0)
            {
                selectedSavedCardId = savedCards[0].Id;
                var first = savedCards[0];
                payment.Cardholder = first.Cardholder;
                payment.CardNumber = $"**** **** **** {first.Last4}";
                payment.Expiry = first.Expiry;
            }
        }
    }

    private void BuildGroups()
    {
        groupedCart = cart
            .GroupBy(p => new { p.Id, Size = p.Sizes.FirstOrDefault()?.Size, p.Name, p.ImageUrl, UnitPrice = p.Price })
            .Select(g => new GroupedCartItem
            {
                PizzaId = g.Key.Id,
                Size = g.Key.Size ?? string.Empty,
                Name = g.Key.Name,
                ImageUrl = g.Key.ImageUrl,
                UnitPrice = g.Key.UnitPrice,
                Quantity = g.Count(),
            })
            .Select(x => { x.LineTotal = x.UnitPrice * x.Quantity; return x; })
            .ToList();
    }

    private async Task SubmitPayment()
    {
        // Ã–rnek Ã¶deme iÅŸlemi: kÃ¼Ã§Ã¼k bir gecikme ve baÅŸarÄ± mesajÄ±
        message = "Ã–deme iÅŸleniyor...";
        await Task.Delay(800);
        message = "Ã–deme baÅŸarÄ±lÄ±! Afiyet olsun.";

        if (isAuthenticated && saveCard && !useSavedCard && Auth.CurrentUser != null)
        {
            var digits = new string((payment.CardNumber ?? string.Empty).Where(char.IsDigit).ToArray());
            var last4 = digits.Length >= 4 ? digits.Substring(digits.Length - 4) : digits;
            var brand = digits.StartsWith("4") ? "Visa" : (digits.StartsWith("5") ? "Mastercard" : "Card");

            var card = new Pitzam.Models.SavedCard
            {
                Cardholder = payment.Cardholder,
                Last4 = last4,
                Expiry = payment.Expiry,
                Brand = brand
            };

            var updatedUser = new Pitzam.Models.User
            {
                Id = Auth.CurrentUser.Id,
                FullName = Auth.CurrentUser.FullName,
                Email = Auth.CurrentUser.Email,
                Phone = Auth.CurrentUser.Phone,
                Address = Auth.CurrentUser.Address,
                CreatedAt = Auth.CurrentUser.CreatedAt,
                Password = string.Empty,
                SavedAddresses = Auth.CurrentUser.SavedAddresses ?? new List<Pitzam.Models.Customer>(),
                SavedCards = Auth.CurrentUser.SavedCards ?? new List<Pitzam.Models.SavedCard>()
            };

            if (!updatedUser.SavedCards.Any(c => c.Last4 == card.Last4 && c.Expiry == card.Expiry && c.Brand == card.Brand))
            {
                updatedUser.SavedCards.Add(card);
                await Auth.UpdateUserAsync(updatedUser);
            }
        }

        // Son sipariÅŸi al, varsa sipariÅŸ geÃ§miÅŸine ekle ve onay sayfasÄ±na git
        var lastOrder = await OrderState.GetLastOrderAsync();
        if (lastOrder != null)
        {
            await OrderState.AddOrderToHistoryAsync(lastOrder);
            var orderNumber = lastOrder.OrderNumber;
            OrderState.ClearCart();
            await Task.Delay(600);
            Nav.NavigateTo($"/order-confirmation/{orderNumber}");
            return;
        }

        OrderState.ClearCart();
        await Task.Delay(600);
        Nav.NavigateTo("/");
    }

    private class GroupedCartItem
    {
        public int PizzaId { get; set; }
        public string Size { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string? ImageUrl { get; set; }
        public decimal UnitPrice { get; set; }
        public int Quantity { get; set; }
        public decimal LineTotal { get; set; }
    }

    private class PaymentModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.StringLength(60, MinimumLength = 3)]
        public string Cardholder { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.StringLength(19, MinimumLength = 12)]
        public string CardNumber { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.RegularExpression(@"^(0[1-9]|1[0-2])\/\d{2}$", ErrorMessage = "AA/YY formatÄ±nda giriniz")] 
        public string Expiry { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.StringLength(4, MinimumLength = 3)]
        public string Cvv { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Range(typeof(bool), "true", "true", ErrorMessage = "Devam etmek iÃ§in sÃ¶zleÅŸmeyi kabul edin")]
        public bool AcceptedTerms { get; set; }
    }

    private PaymentModel payment = new();

    private void HandleSavedCardChange(ChangeEventArgs e)
    {
        selectedSavedCardId = e.Value?.ToString();
        if (!string.IsNullOrEmpty(selectedSavedCardId))
        {
            // Saved card selected: pre-fill masked info for display only
            var card = savedCards.FirstOrDefault(c => c.Id == selectedSavedCardId);
            if (card != null)
            {
                payment.Cardholder = card.Cardholder;
                payment.CardNumber = $"**** **** **** {card.Last4}";
                payment.Expiry = card.Expiry;
            }
        }
        else
        {
            // New card path
            payment = new PaymentModel();
        }
    }
}
