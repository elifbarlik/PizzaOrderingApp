                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-info">@message</div>
                        }

                        @if (isAuthenticated && savedCards.Count > 0)
                        {
                            <div class="mb-3">
